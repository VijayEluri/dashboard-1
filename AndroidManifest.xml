<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.rightscale"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    	<provider android:name="com.rightscale.provider.Dashboard" android:authorities="com.rightscale.provider.dashboard" />

		<activity
			android:label="@string/settings"
			android:name="Settings" />		
		
        <activity android:label="@string/app_name" android:name="IndexDeployments">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
 				<category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" android:host="com.rightscale.provider.dashboard" android:path="/deployments" />
            </intent-filter>        	
        </activity>

        <activity android:label="@string/index_deployment_servers" android:name="IndexDeploymentServers">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
 				<category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" android:host="com.rightscale.provider.dashboard" android:pathPattern="/deployments/.*" />
            </intent-filter>        	
		</activity>

        <activity android:label="@string/show_server" android:name="ShowServer">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
 				<category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" android:host="com.rightscale.provider.dashboard" android:pathPattern="/servers/.*" />
            </intent-filter>        	
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
 				<category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" android:host="stupid_hack" android:pathPattern="/servers/.*" />
            </intent-filter>        	
		</activity>
    </application>
    <uses-sdk android:minSdkVersion="4" />

</manifest> 